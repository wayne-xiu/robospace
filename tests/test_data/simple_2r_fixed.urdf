<?xml version="1.0"?>
<robot name="simple_2r_fixed">

  <link name="base_link"/>
  <link name="fixed_link"/>
  <link name="link1"/>
  <link name="link2"/>

  <!-- Fixed joint at the base -->
  <joint name="fixed_base" type="fixed">
    <parent link="base_link"/>
    <child link="fixed_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Revolute joints (planar) -->
  <joint name="joint1" type="revolute">
    <parent link="fixed_link"/>
    <child link="link1"/>
    <origin xyz="1.0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="100.0" velocity="2.0"/>
  </joint>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0.8 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="50.0" velocity="2.0"/>
  </joint>

</robot>
